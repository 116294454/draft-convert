{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": ["hubspot", "prettier"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "flowtype"
    ],
    "rules": {
        "no-undefined": "off",
        "no-unused-vars": ["error", { "vars": "all", "args": "none" }],
        "no-param-reassign": "off",
        "consistent-return": "off",
        "func-style": "off",
        "flowtype/define-flow-type": 1,
        "react/jsx-uses-react": 1,
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
